<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="errorMessage"
            type="String" />

        <variable
            name="retryListener"
            type="softxpert.movie.app.presentation.utils.RetryClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_color"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{()-> retryListener.onRetry()}"
        app:error_status="@{!errorMessage.isEmpty()}"
        tools:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/error_animation"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:error_message="@{errorMessage}"
            app:error_status="@{!errorMessage.isEmpty()}"
            app:layout_constraintBottom_toTopOf="@id/error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/tajwal_medium"
            android:gravity="center"
            android:text="@{errorMessage}"
            android:textColor="@color/error_message_color"
            android:textSize="@dimen/_17ssp"
            app:layout_constraintBottom_toTopOf="@id/tap_to_retry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/error_animation"
            tools:text="No internet connection" />

        <TextView
            android:id="@+id/tap_to_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/tajwal_medium"
            android:text="@string/tap_to_retry"
            android:textColor="@color/retry_text_color"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/error" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>